(defwidget datemenu [valign halign] (box
    :valign valign
    :halign halign
    :orientation "v"
    :class "datemenu"
    :space-evenly false
    (box
      :halign "center"
      :space-evenly false
      :class "clock"
      (label :text hour)
      (label :text ":")
      (label :text minutes))
    (box
      :class "calendar-bin widget"
      (calendar))
    
    
  ))
