##---------- System (super / super + shift) ----------##
# Terminal
super + Return
	st

# TDrop (scratchpad)
super + shift + Return
	tdrop -ma -A -w 50% -x 25% -s dropdown kitty

# Lockscreen
super + l
	slock

# Reload Keybindings
super + BackSpace
	pkill -USR1 -x sxhkd

# change theme
super + t
	bash theme_changer

# powermenu
super + x
	bash powermenu

# dmenu
super + d
	dmenu_run -l 9 -p "ï©¯" 

##---------- Other programs or scripts (super + ctrl) ----------##

# Color Picker
super + ctrl + p
	gpick

##---------- Applications (super + alt) ----------##

# File Manager
super + alt + f
	thunar

# Browser
super + alt + b
	chromium
super + alt + e
	firefox

# Terminal Apps
super + alt + {v,n,h}
	alacritty -e {vim,nnn -dHc,btm}

##---------- System Keys ----------##

# Take a screenshot
Print
	flameshot full -p $HOME/Pictures/SS/

# Take a screenshot with gui selection
super + Print
	flameshot gui
	
# Volume control

alt + F1
  pamixer -d 5 --allow-boost #to increase 5%
alt + F2
	pamixer -i 5 --allow-boost #to increase 5%
alt + F3
  pamixer Master -t
alt + F4
  pavucontrol
