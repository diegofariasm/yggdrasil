(include "./yuck/widgets.yuck")
(include "./yuck/windows.yuck")
(include "./yuck/setups/leftbar.yuck")


(defpoll hour :interval "1m" "date +%I")
(defpoll min  :interval "1m" "date +%M")
(defpoll type :interval "1m" "date +%p")
(defpoll day   :interval "10m" "date +%d")
(defpoll month :interval "1h"  "date +%m")
(defpoll year  :interval "1h"  "date +%y")

(deflisten window "maiden hyprland window title --listen")
(deflisten workspaces "maiden hyprland workspace workspaces --listen")
