(defwidget time [ orientation ]
  (box
    :class "date-time"
    :orientation orientation
    hour min type
  )
)

(defwidget date [ orientation ]
  (box 
  :orientation orientation
  :class "date-time"
  day month year
  )
)

(defwidget panel_info [ orientation ]
  (box
    :orientation "v"
    :spacing 5
    (time :orientation orientation)
    (date :orientation orientation)
  )
)
