# use sh as the shell to exec commands (this is recommended cause I use fish)
set -U SXHKD_SHELL sh

# launcher (apps)
super + d
  rofi -show drun
# powermenu
#super + m
#  powermenu

#Hide/unhide
super + space
  winhide

# ----
# apps
# ----

#Volume

#Decrease Volume
F1
  pamixer -d 5
#Increase Volume
F2
  pamixer -i 5 --allow-boost
F3
  pamixer -t

# terminal
super + Return
  st

# screenshot app
Print
  flameshot gui

#thunar
super + t
  thunar 
# browser
super + a
  firefox

# editor
super + e
  emacsclient -c -a 'emacs'
  #alacritty -e nvim


# vim is neovim here!

# file manager
#super + @space
#  alacritty ranger

# ------
# system
# ------

# sxhkd reload
super + Escape
	pkill -USR1 -x sxhkd

# quit bspwm
super + shift + e
  powermenu

#restart bspwm
super + shift + r
	bspc {wm -r}

# lock the system
super + shift + l
  lock

# ----------
# Workspaces
# ----------

# move current window to another workspace
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

# focus the next/previous desktop in the current monitor
super + {Page_Down, Page_Up}
  bspc desktop -f {prev,next}

# -----------------
# Window Management
# -----------------

# change window state to floating or tiled
super + Tab
  bspc node -t {floating,tiled}

# close window
super + {_,shift + }q
  bspc node -{c,k}

# change focus for next window
alt + Tab
  bspc node -f next.local.!hidden.window

# change focus on directions

super + {_,shift + }{Left,Down,Up,Right} 
  bspc node --{focus,swap} {west,south,north,east}


# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# resize a window
super + ctrl + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }
