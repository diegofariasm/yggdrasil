#!/usr/bin/env bash

if [[ $# -eq 0 ]]; then
	echo "Error: no arguments provided"
	exit 1
fi
workspace=$1

# This should only be needed if you are using
# focus follow window

# Change the workspace and eww var
hyprctl dispatch movetoworkspace "${workspace}"
eww --config ~/.config/hypr/config/eww update active-tag="$workspace"
